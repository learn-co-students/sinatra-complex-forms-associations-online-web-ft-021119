<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <br>
  <label>Name:</label>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br>

  <label>Choose an existing owner:</label>

  <br>

  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>" <%='checked' if owner == @pet.owner %>><%=owner.name%>
  <%end%>
  <br>

  <label>Or, create a new owner:</label>
  <br>
  <label>Name:</label>
    <input type="text" name="owner[name]" id="owner_name">
  <br>
  <input type="submit" id="submit" value="Update Pet">
